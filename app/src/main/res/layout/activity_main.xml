<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment android:name="com.tpillon.schoolapplication.Views.Fragments.FormFragment"
            android:id="@+id/formFragmentContainer"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <fragment android:name="com.tpillon.schoolapplication.Views.Fragments.SendFragment"
            android:id="@+id/sendFragmentContainer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>